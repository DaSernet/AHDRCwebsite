@model AHDRCwebsite.ViewModel.ArtImages

@{
    ViewData["Title"] = "Create";
}

<h1 class="text-light">Create</h1>

<h4 class="text-light">ArtworkImage</h4>
<hr />
<div class="row">
    <div class="col-md-4 text-light">
        <form id="createForm" asp-action="Create" enctype="multipart/form-data" asp-controller="ArtworkImages">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Artwork.ArtworkId" class="control-label"></label>
                <select asp-for="Artwork.ArtworkId" asp-items="@ViewBag.images" class="form-control">
                    @*<option value="0">Select artwork</option>*@
                </select>
                <span asp-validation-for="Artwork.ArtworkId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Images" class="control-label"></label>
                <input id="fileInput" asp-for="Images" class="form-control" multiple />
                <span asp-validation-for="Images" class="text-danger"></span>
            </div>
            <div>
                <input id="createButton" type="submit" value="Create" class="btn btn-primary" disabled />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        $(document).ready(function () {
            $("#fileInput").change(function () {
                var files = $(this)[0].files;
                if (files.length > 0) {
                    $("#createButton").prop("disabled", false);
                } else {
                    $("#createButton").prop("disabled", true);
                }
            });
        });
    </script>
}
